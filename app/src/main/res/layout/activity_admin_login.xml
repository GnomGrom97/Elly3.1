<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_back_login"
    tools:context=".AdminLoginActivity">


    <ImageView
        android:id="@+id/imageBrain"
        android:layout_width="225dp"
        android:layout_height="182dp"
        app:layout_constraintBottom_toTopOf="@+id/edLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.459"
        app:srcCompat="@drawable/brain" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_back_white30"
        android:onClick="OnClickSignIn"
        android:text="Войти"
        android:textColor="#787373"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edPassword" />

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="353dp"
        android:layout_height="63dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/round_back_white30"
        android:ems="10"
        android:hint="          Пароль(минимум 6 символов)"
        android:inputType="textPersonName"
        android:textColorHint="#787373"
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edLogin" />

    <EditText
        android:id="@+id/edLogin"
        android:layout_width="348dp"
        android:layout_height="56dp"
        android:textColor="@color/black"
        android:layout_marginTop="380dp"
        android:background="@drawable/round_back_white30"
        android:ems="10"

        android:hint="       Email"
        android:inputType="textPersonName"
        android:textColorHint="#787373"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAdminName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите логин и пароль"
        android:textColor="#787373"
        app:layout_constraintBottom_toTopOf="@+id/edLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBrain" />
</androidx.constraintlayout.widget.ConstraintLayout>