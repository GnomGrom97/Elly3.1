<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/round_back_login"
    android:layout_height="match_parent"
    tools:context=".MainActivityPsych">

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="332dp"
        android:layout_height="70dp"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edEmail" />

    <EditText
android:id="@+id/edEmail"
android:layout_width="332dp"
android:layout_height="70dp"
android:ems="10"
android:hint="Почта"
android:inputType="textPersonName"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.493"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/edEducation" />

    <Button
        android:id="@+id/saveBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:onClick="onClickSave"
        android:text="сохранить "
        android:background="@drawable/round_back_white30"
        android:textColor="#787373"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DownloadEduBtn" />

    <EditText
android:id="@+id/edEducation"
android:layout_width="332dp"
android:layout_height="70dp"
android:ems="10"
android:hint="Образование"
android:inputType="textPersonName"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.493"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/edThreeName" />

<EditText
android:id="@+id/edSecondName"
android:layout_width="332dp"
android:layout_height="70dp"
android:layout_marginTop="16dp"
android:ems="10"
android:hint="Фамилия"
android:inputType="textPersonName"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.493"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/edName" />

<EditText
android:id="@+id/edThreeName"
android:layout_width="332dp"
android:layout_height="70dp"
android:layout_marginTop="12dp"
android:ems="10"
android:hint="Отчество"
android:inputType="textPersonName"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.493"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/edSecondName" />

    <Button
        android:id="@+id/SpecializaionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="OnClickSpecializaion"
        android:text="Специализация"
        android:background="@drawable/round_back_white30"
        android:textColor="#787373"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveBt"
        app:layout_constraintVertical_bias="0.62" />

    <Button
        android:id="@+id/DownloadEduBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:onClick="OnClickDownloadEducation"
        android:text="Загрузить диплом"
        android:background="@drawable/round_back_white30"
        android:textColor="#787373"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edPassword" />

    <EditText
android:id="@+id/edName"
android:layout_width="332dp"
android:layout_height="70dp"
android:layout_marginTop="16dp"
android:ems="10"
android:hint="Имя"
android:inputType="textPersonName"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.493"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ImImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/saveBt"
        app:layout_constraintTop_toBottomOf="@+id/edPassword"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>