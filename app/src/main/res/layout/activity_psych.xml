<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PsychActivity"
    android:background="@drawable/round_back_login">
    <!--Перенес внешний вид на активити админ-->

    <Button
        android:id="@+id/Imessage"
        android:layout_width="53dp"
        android:layout_height="54dp"
        android:background="@drawable/round_back_black_small"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.712"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094" />

    <Button
        android:id="@+id/exit"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/round_back_white30"
        android:onClick="onClickSignOut"
        android:text="Выйти"
        android:textColor="#787373"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings"
        app:layout_constraintVertical_bias="0.876" />

    <Button
        android:id="@+id/settings"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/round_back_white30"
        android:onClick="onClickSettings"
        android:text="Настройка"
        android:textColor="#787373"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizList"
        app:layout_constraintVertical_bias="0.145" />

    <Button
        android:id="@+id/quizList"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/round_back_white30"
        android:onClick="onClickQuizList"
        android:text="Опросы"
        android:textColor="#787373"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/posters" />

    <Button
        android:id="@+id/posters"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/round_back_white30"
        android:onClick="onClickPosters"
        android:text="Объявления"
        android:textColor="#787373"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message"
        app:layout_constraintVertical_bias="0.09" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/PsychImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/round_back_white_round"
        android:src="@drawable/profile_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <Button
        android:id="@+id/message"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/round_back_white30"
        android:onClick="onClickPsychMessages"
        android:text="Входящие"
        android:textColor="#787373"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PsychImage"
        app:layout_constraintVertical_bias="0.117" />

    <TextView
        android:id="@+id/tvPsychName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать"
        android:textColor="#787373"
        app:layout_constraintBottom_toTopOf="@+id/message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PsychImage" />
</androidx.constraintlayout.widget.ConstraintLayout>