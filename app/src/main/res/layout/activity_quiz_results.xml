<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/round_back_login"
    android:layout_height="match_parent"
    tools:context=".QuizResults">

    <ImageView
        android:id="@+id/congratilationIcon"
        android:layout_width="236dp"
        android:layout_height="245dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="81dp"
        android:adjustViewBounds="true"
        android:src="@drawable/brain" />

    <TextView
        android:id="@+id/successTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/congratilationIcon"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Ваш результат:"
        android:textColor="#787373"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
    android:layout_below="@+id/successTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    >
    <TextView
        android:id="@+id/correctAnswears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Правильные ответы 0"
        android:textStyle="bold"
        android:textColor="#00C855"
></TextView>
    <TextView
        android:id="@+id/incorrectAnswears"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Неправильные ответы 0"
        android:textStyle="bold"
        android:textColor="#DD2C00"/>
</LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startNewQuizBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"

        android:layout_marginBottom="30dp"
        android:background="@drawable/round_back_white30"
        android:text="Начать новую викторину"
        android:textColor="#787373" />
</RelativeLayout>